{
  "name": "et-ccd-definitions",
  "version": "1.0.0",
  "description": "CCD definitions workspace for Employment Tribunal - Admin, England & Wales, and Scotland",
  "private": true,
  "workspaces": [
    "jurisdictions/admin",
    "jurisdictions/england-wales",
    "jurisdictions/scotland",
    "tools/*"
  ],
  "repository": "https://github.com/hmcts/et-ccd-callbacks",
  "license": "MIT",
  "engines": {
    "node": ">=18.0.0",
    "yarn": ">=3.0.0"
  },
  "scripts": {
    "build": "node tools/build-workspace.js --env local",
    "build:all": "yarn workspace admin build && yarn workspace england-wales build && yarn workspace scotland build",
    "build:admin": "yarn workspace admin build",
    "build:england-wales": "yarn workspace england-wales build",
    "build:scotland": "yarn workspace scotland build",
    "generate-excel:all": "ET_ENV=local node tools/build-workspace.js",
    "generate-excel:local": "ET_ENV=local node tools/build-workspace.js",
    "generate-excel:local-prod": "ET_ENV=prod node tools/build-workspace.js --output-suffix=local",
    "generate-excel:cftlib": "ET_ENV=cftlib node tools/build-workspace.js",
    "generate-excel:cftlib-prod": "ET_ENV=prod node tools/build-workspace.js --output-suffix=cftlib",
    "generate-excel:demo": "ET_ENV=demo node tools/build-workspace.js",
    "generate-excel:demo-prod": "ET_ENV=prod node tools/build-workspace.js --output-suffix=demo",
    "generate-excel:aat": "ET_ENV=aat node tools/build-workspace.js",
    "generate-excel:aat-prod": "ET_ENV=prod node tools/build-workspace.js --output-suffix=aat",
    "generate-excel:prod": "ET_ENV=prod node tools/build-workspace.js",
    "generate-excel:preview": "ET_ENV=preview node tools/build-workspace.js",
    "generate-excel:preview-prod": "ET_ENV=prod node tools/build-workspace.js --output-suffix=preview",
    "scripts:env": "node configs/environment/json-env.js",
    "scripts:preview": "node configs/environment/preview-env.js",
    "generate-json": "yarn workspace admin generate-json",
    "lint": "yarn workspace admin lint && yarn workspace england-wales lint && yarn workspace scotland lint && yarn workspace ccd-definition-processor lint",
    "lint:fix": "yarn workspace admin lint:fix && yarn workspace england-wales lint:fix && yarn workspace scotland lint:fix && yarn workspace ccd-definition-processor lint",
    "format": "prettier --write \"**/*.{js,json,md,yml,yaml}\"",
    "format:check": "prettier --check \"**/*.{js,json,md,yml,yaml}\"",
    "clean": "yarn workspaces foreach --parallel run clean && rimraf dist/",
    "clean:deps": "yarn workspaces foreach --parallel exec rimraf node_modules && rimraf node_modules",
    "setup": "yarn install && yarn workspace ccd-definition-processor install",
    "reset": "yarn clean:deps && yarn setup",
    "dev": "yarn build:all --env local --watch",
    "start": "yarn workspace admin start"
  },
  "dependencies": {
    "@hmcts/nodejs-healthcheck": "^1.8.0",
    "config": "^3.3.9",
    "express": "^4.18.2"
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^7.0.0",
    "@typescript-eslint/parser": "^7.0.0",
    "eslint": "^8.9.0",
    "eslint-config-prettier": "^10.0.0",
    "eslint-plugin-import": "^2.25.4",
    "eslint-plugin-prettier": "^4.0.0",
    "prettier": "^2.7.1",
    "rimraf": "^5.0.0",
    "typescript": "^5.0.0"
  },
  "resolutions": {
    "axios": "1.8.4",
    "flat": "^5.0.1",
    "minimatch": "3.1.2",
    "phin": "^3.7.1",
    "formidable": "^3.2.4",
    "ws": "^8.17.1",
    "braces": "^3.0.3",
    "micromatch": "^4.0.8",
    "json5": "^2.2.3",
    "@babel/runtime": "^7.26.10",
    "tar-fs": "^3.0.8",
    "@babel/helpers": "^7.26.10",
    "body-parser": "^2.0.0",
    "cookie": "^1.0.0",
    "serve-static": "^1.16.0",
    "send": "^0.19.1",
    "cross-spawn": "^6.0.6",
    "semver": "^7.5.2",
    "image-size": "^1.2.1"
  },
  "packageManager": "yarn@3.8.7"
}
