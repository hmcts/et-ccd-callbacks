{
  "name": "et-ccd-definitions-admin",
  "version": "1.0.0",
  "description": "Utility to generate CCD config definitions for Employment Tribunal admin data",
  "main": "index.js",
  "repository": "https://github.com/hmcts/et-ccd-definitions-admin",
  "license": "MIT",
  "private": true,
  "dependencies": {
    "@hmcts/nodejs-healthcheck": "^1.8.0",
    "@hmcts/properties-volume": "^1.0.0",
    "codeceptjs": "3.6.5",
    "config": "^3.3.7",
    "eslint-plugin-codeceptjs": "1.3.0",
    "express": "5.1.0",
    "faker": "^5.5.3",
    "glob": "^10.2.7",
    "json-stringify-pretty-compact": "^4.0.0",
    "lodash": "^4.17.21",
    "matcher": "5.0.0",
    "minimist": "^1.2.8",
    "mocha-multi": "1.1.7",
    "mochawesome": "7.1.3",
    "moment": "^2.29.2",
    "prettier": "^2.7.1",
    "pretty-quick": "^4.0.0",
    "puppeteer": "^24.0.0",
    "typescript": "^5.0.0",
    "xlsx": "https://cdn.sheetjs.com/xlsx-0.19.3/xlsx-0.19.3.tgz",
    "xlsx-populate": "^1.21.0"
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^7.0.0",
    "@typescript-eslint/parser": "^7.0.0",
    "chai": "^4.2.0",
    "eslint": "^8.9.0",
    "eslint-config-prettier": "^10.0.0",
    "eslint-plugin-import": "^2.25.4",
    "eslint-plugin-jest": "^28.0.0",
    "eslint-plugin-mocha": "^10.0.3",
    "eslint-plugin-prettier": "^4.0.0",
    "jest": "^29.0.0",
    "mocha": "^11.0.0",
    "sonar-scanner": "^3.1.0"
  },
  "resolutions": {
    "axios": "1.8.4",
    "flat": "^5.0.1",
    "minimatch": "3.1.2",
    "phin": "^3.7.1",
    "formidable": "^3.2.4",
    "ws": "^8.17.1",
    "braces": "^3.0.3",
    "micromatch": "^4.0.8",
    "json5": "^2.2.3",
    "@babel/runtime": "^7.26.10",
    "tar-fs": "^3.0.8",
    "@babel/helpers": "^7.26.10",
    "body-parser": "^2.0.0",
    "cookie": "^1.0.0",
    "serve-static": "^1.16.0",
    "send": "^0.19.1",
    "cross-spawn": "^6.0.6",
    "semver": "^7.5.2",
    "image-size": "^1.2.1"
  },
  "config": {
    "local": "http://host.docker.internal:8081",
    "cftlib": "http://localhost:8081",
    "demo": "http://et-cos-demo.service.core-compute-demo.internal",
    "aat": "http://et-cos-aat.service.core-compute-aat.internal",
    "prod": "http://et-cos-prod.service.core-compute-prod.internal"
  },
  "scripts": {
    "envs": "node json-env.js",
    "audit": "echo audit",
    "reset-ccd-submodule": "git submodule update --init --recursive && git submodule foreach --recursive git pull origin master && cd ccd-definition-processor && yarn install",
    "setup": "git submodule update --init --recursive && cd ccd-definition-processor && yarn install",
    "lint": "eslint --fix .",
    "test": "NODE_PATH=. mocha src/test/unit/**/*.js",
    "test:coverage": "echo test:coverage",
    "test:a11y": "echo test:a11y",
    "test:smoke": "NODE_TLS_REJECT_UNAUTHORIZED=0 codeceptjs run --steps -c ./src/test/smoke/codecept.conf.js --steps --reporter mocha-multi --verbose",
    "test:functional": "NODE_TLS_REJECT_UNAUTHORIZED=0 codeceptjs run --steps -c ./src/test/functional/codecept.conf.js --steps --reporter mocha-multi --verbose",
    "start": "node index.js",
    "sonar-scan": "node_modules/sonar-scanner/bin/sonar-scanner",
    "generate-json": "cd ccd-definition-processor && yarn xlsx2json -D ../definitions/json -i ../definitions/xlsx/ccd-config-base.xlsx && pretty-quick --pattern 'definitions/json/**.json'",
    "generate-excel-local": "yarn envs local generate-excel -e '*-prod.json'",
    "generate-excel-cftlib": "yarn envs cftlib generate-excel -e '*-prod.json'",
    "generate-excel-preview": "node preview-env.js",
    "generate-excel-demo": "yarn envs demo generate-excel -e '*-prod.json'",
    "generate-excel-aat": "yarn envs aat generate-excel -e '*-prod.json'",
    "generate-excel-ithc": "yarn envs ithc generate-excel -e '*-prod.json'",
    "generate-excel-prod": "yarn envs prod generate-excel -e '*-nonprod.json'",
    "generate-excel": "cd ccd-definition-processor && yarn json2xlsx -D ../definitions/json -o ../definitions/xlsx/et-admin-ccd-config-${ET_ENV}.xlsx",
    "generate-excel-all": "yarn generate-excel-local && yarn generate-excel-demo && yarn generate-excel-aat && yarn generate-excel-prod",
    "setup-englandwales": "git submodule update --remote --recursive et-ccd-definitions-englandwales && cd et-ccd-definitions-englandwales && yarn install",
    "setup-scotland": "git submodule update --remote --recursive et-ccd-definitions-scotland && cd et-ccd-definitions-scotland && yarn install"
  },
  "packageManager": "yarn@3.8.7"
}
